<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sign"
    tools:context=".SignParent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:id="@+id/log1"
        android:layout_marginStart="150dp"
        android:layout_marginTop="50dp"
        android:textSize="40sp"
        android:textColor="#E81708"
        android:gravity="center"
        android:textStyle="bold"/>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/log1"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        android:alpha="0.9"
        android:background="#00008B"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:cardCornerRadius="10dp"
        android:id="@+id/form1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/em1"
                android:layout_below="@+id/log1"
                android:text="Email:"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"/>

            <EditText
                android:id="@+id/passb"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/carrr1"
                android:drawableEnd="@drawable/baseline_email_24"
                android:layout_marginTop="20dp"
                android:paddingStart="20dp"
                android:hint="Your email"
                android:minHeight="48dp"
                android:textStyle="bold"
                tools:ignore="RtlSymmetry" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/passk"
                android:text="Create Password:"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"/>

            <EditText
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:id="@+id/bkn"
                android:background="@drawable/carrr1"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:hint="Your password"
                android:inputType="textPassword"
                android:drawableEnd="@drawable/baseline_lock_24"
                android:textStyle="bold"
                android:minHeight="48dp"
                android:paddingStart="20dp"/>

            <Button
                android:id="@+id/btn1"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bkn"
                android:clickable="true"
                android:layout_marginStart="105dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="140dp"
                android:text="Sign In"
                android:textSize="23sp"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:id="@+id/lay1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/form1"
        android:layout_marginStart="30dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/cctxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn1"
            android:layout_gravity="center"
            android:layout_marginStart="45dp"
            android:layout_marginTop="5dp"
            android:minHeight="48dp"
            android:paddingStart="5dp"
            android:paddingTop="10dp"
            android:paddingEnd="5dp"
            android:text="Already have account: Login"
            android:textColor="#00008B"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>


</RelativeLayout>